{
  "manifest_version": 2,
  "name": "Thoughts Extension",
  "version": "1.0.0",
  "description": "A Firefox extension for managing and accessing thoughts from thoughts.waylonwalker.com in a convenient popup interface",
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "https://thoughts.waylonwalker.com/*",
    "https://dropper.wayl.one/*",
    "http://localhost:8000/*",
    "cookies",
    "storage",
    "activeTab",
    "notifications",
    "tabs"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "website-popup@example.com"
    }
  }
}
