{
  "manifest_version": 2,
  "name": "Website Popup",
  "version": "1.0",
  "description": "Open a website in a popup",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "https://thoughts.waylonwalker.com/*",
    "https://dropper.wayl.one/*",
    "http://localhost:8000/*",
    "cookies",
    "storage",
    "activeTab",
    "notifications",
    "tabs"
  ]
}
